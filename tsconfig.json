{
    "compilerOptions": {
        "baseUrl": "./",
        "target": "es5",
        "module": "commonjs",
        "sourceMap": true,
        "noEmitHelpers": true,
        "importHelpers": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports":true,
        "allowUnreachableCode": true,
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "suppressImplicitAnyIndexErrors": true,
        "removeComments": true,
        "noUnusedLocals": true,
        "jsx": "react",
        "lib": [
            "dom",
            "es7",
            "es6",
            "es2015"
        ],
        "typeRoots": [
            "node_modules/@types",
        ],
        "outDir": "./dist",
        "paths": {
        }
    },
    "exclude": [
        "node_modules",
        "**/*.test.ts",
    ]
}
