{
    "compilerOptions": {
        "baseUrl": "./",
        "target": "es2015",
        // "module": "commonjs",
        "sourceMap": true,
        "esModuleInterop": true,
        "noEmitHelpers": true,
        "importHelpers": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "allowUnreachableCode": true,
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "suppressImplicitAnyIndexErrors": true,
        "removeComments": true,
        "noUnusedLocals": true,
        "jsx": "react",
        "lib": [
            "dom",
            "es7",
            "es6",
            "es2015"
        ],
        "typeRoots": [
            "node_modules/@types",
        ],
        "outDir": "./dist",
        "types": [
            "node",
            "electron"
        ],
        "paths": {
            "~util": [
                "util/index"
            ],
            "~module/*": [
                "module/*"
            ],
            "~model/*": [
                "model/*"
            ],
            "~config": [
                "config/index"
            ],
            "~component/*": [
                "assets/src/component/*"
            ],
            "~service": [
                "assets/src/service"
            ],
            "~cModule/*": [
                "assets/src/module/*"
            ],
            "~cModel/*": [
                "assets/src/model/*"
            ],
            "~css/*": [
                "assets/src/css"
            ],
            "~src/*": [
                "assets/src/*"
            ],
            "~image/*": [
                "assets/src/image/*"
            ]
        }
    },
    "exclude": [
        "node_modules",
        "**/*.test.ts",
    ]
}
