{
    "extends": ["tslint-microsoft-contrib"],
    "rules": {
        "max-line-length": {
            "options": [150]
        },
        "quotemark": {
            "options": ["single", "avoid-escape"]
        },
        "no-implicit-dependencies": [
            true,
            [
                "~db",
                "~model",
                "~module",
                "~type",
                "~config",
                "~controller",
                "~route",
                "~component",
                "~service",
                "~cModule",
                "~util",
                "~css",
                "~src",
                "~image",
                "~cModel"
            ]
        ],
        "no-submodule-imports": [
            true,
            "~css",
            "~src",
            "~image",
            "~cModel"
        ],
        "ordered-imports": false,
        "non-literal-fs-path": false,
        "align": false,
        "no-null-keyword": false,
        "no-default-export": false,
        "missing-jsdoc": false,
        "import-name": false,
        "object-literal-sort-keys": false,
        "insecure-random": false,
        "new-parens": true,
        "no-http-string": false,
        "no-import-side-effect": [true, {"ignore-module": "(\\.html|\\.css)$"}],
        "variable-name": [
            true,
            "ben-keywords",
            "check-format",
            "allow-pascal-case"
        ],
        "function-name": [
            true,
            {
                "function-regex": "^[A-Za-z][\\w\\d]+$",
                "static-method-regex": "^[A-Za-z_\\d]+$",
                "method-regex": "^[A-Za-z_\\d]+$"
            }
        ],
        "no-arg": true,
        "no-debugger": false,
        "no-bitwise": true,
        "no-conditional-assignment": true,
        "no-consecutive-blank-lines": false,
        "no-unused-expression": false,
        "no-console": {
            "severity": "warning",
            "options": ["debug", "info", "log", "time", "timeEnd", "trace"]
        }
    },
    "jsRules": {
        "max-line-length": {
            "options": [150]
        }
    }
}
